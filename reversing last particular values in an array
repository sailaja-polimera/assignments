# include <stdio.h>
#include <string.h>
int main()
{
  char str[10];
  scanf("%s",str);
  int l=strlen(str);
  int n;
  scanf("%d",&n);
  for(int i=0;i<n/2;i++)
  {
      char temp=str[l-n+i];
      str[l-n+i]=str[l-i-1];
      str[l-i-1]=temp;
  }
 for(int i=0;i<l;i++)
      printf("%c",str[i]);
  
}
